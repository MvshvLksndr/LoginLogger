<Window x:Class="LoginLogger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginLogger"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label>Логин</Label>
            <TextBox Margin="10" Name="tbLogin"/>
            <Label>Пароль</Label>
            <TextBox Margin="10" Name="tbPass"/>
            <Button Margin="10" Name="btnLogin" Click="btnLogin_Click">Войти</Button>
            <Button Margin="10" Name="btnReg" Click="btnReg_Click">Регистрация</Button>

        </StackPanel>
        
    </Grid>
</Window>
